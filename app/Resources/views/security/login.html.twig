{% extends '::content.html.twig' %}

{% block body %}
    <div class="form-signin">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        {{ form_start(form) }}
        {{ form_row(form._username) }}
        {{ form_row(form._password) }}
        <div class="form-group">
            <div class="col-sm-3">
                {{ form_widget(form.submit) }}
            </div>
            <div class="col-sm-3">
                <a class="btn btn-primary" href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}">
                    Facebook
                </a>
            </div>
            <div class="col-sm-3">
                <a class="btn btn-success" href="{{ path('hwi_oauth_service_redirect', {'service': 'google' }) }}">
                    Google
                </a>
            </div>
            <div class="col-sm-3">
                <p class="form-control-static">
                    <a href="{{ path('user_registration') }}">{% trans %}action.register{% endtrans %}</a>
                </p>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}